# JonA - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key-here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Firebase Admin (Server-side)
FIREBASE_ADMIN_PRIVATE_KEY=your-firebase-admin-private-key
FIREBASE_ADMIN_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Grok 3 API Configuration (for AI features)
GROK_API_KEY=your-grok-api-key-here
GROK_API_URL=https://api.x.ai/v1

# Meta Graph API (Instagram Integration)
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_REDIRECT_URI=http://localhost:3000/api/auth/instagram/callback

# Google Calendar API (Agenda Integration)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# Encryption Key (for AES-256 encryption)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Database Configuration (if using external database)
DATABASE_URL=your-database-connection-string

# LGPD Compliance
PRIVACY_POLICY_URL=https://yoursite.com/privacy
TERMS_OF_SERVICE_URL=https://yoursite.com/terms

# Development/Production Flag
NODE_ENV=development 